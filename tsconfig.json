{
	"compilerOptions": {
		"lib": [
			"ESNext"
		],
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"outDir": "lib"
	},
	"include": [
		"src/**/*.ts"
	]
}
